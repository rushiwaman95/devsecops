pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'devsecops/nodejs-app'
        DOCKER_TAG = "${BRANCH_NAME}-${BUILD_NUMBER}"
    }
    
    stages {
        
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        // Parallel Security Scans
        stage('Security Scans') {
            parallel {
                
                // Semgrep
                stage('Semgrep') {
                    steps {
                        sh '''
                            docker run --rm -v "${WORKSPACE}:/src" \
                                returntocorp/semgrep:latest \
                                semgrep scan --config=auto /src/app \
                                --json --output=/src/semgrep.json || true
                        '''
                    }
                }
                
                // Secret Detection
                stage('Secret Scan') {
                    steps {
                        sh '''
                            docker run --rm -v "${WORKSPACE}:/src" \
                                trufflesecurity/trufflehog:latest \
                                filesystem /src --json > trufflehog.json || true
                        '''
                    }
                }
                
                // Dependency Check
                stage('Dependency Check') {
                    steps {
                        sh '''
                            docker run --rm -v "${WORKSPACE}/app:/app" \
                                owasp/dependency-check:latest \
                                --scan /app \
                                --format JSON \
                                --out /app || true
                        '''
                    }
                }
            }
        }
        
        // Build
        stage('Build') {
            steps {
                sh 'docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} -f docker/Dockerfile .'
            }
        }
        
        // Container Scan
        stage('Container Scan') {
            steps {
                script {
                    def scanResult = sh(
                        script: '''
                            docker run --rm \
                                -v /var/run/docker.sock:/var/run/docker.sock \
                                aquasec/trivy:latest image \
                                --severity CRITICAL \
                                --exit-code 1 \
                                ${DOCKER_IMAGE}:${DOCKER_TAG}
                        ''',
                        returnStatus: true
                    )
                    
                    if (scanResult != 0) {
                        error "‚ùå Critical vulnerabilities found!"
                    }
                }
            }
        }
        
        // Push (main branch only)
        stage('Push') {
            when {
                branch 'main'
            }
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'docker-hub-credentials',
                    usernameVariable: 'USER',
                    passwordVariable: 'PASS'
                )]) {
                    sh '''
                        echo ${PASS} | docker login -u ${USER} --password-stdin
                        docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                        docker logout
                    '''
                }
            }
        }
    }
    
    post {
        always {
            archiveArtifacts artifacts: '*.json', allowEmptyArchive: true
            cleanWs()
        }
    }
}